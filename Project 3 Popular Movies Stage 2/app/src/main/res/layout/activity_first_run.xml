<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar"
    tools:context=".FirstRunScreens.FirstRun">

    <android.support.v4.view.ViewPager
        android:visibility="gone"
        android:id="@+id/splash_screen_view_pager_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/splash_screen_parent_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/card_view_margin"
            android:elevation="@dimen/card_view_elevation"
            app:cardBackgroundColor="#a8a8a8"
            app:cardCornerRadius="@dimen/card_view_corner_radius">

            <TextView
                android:id="@+id/splash_screen_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="W"
                android:textColor="@color/colorBrightGreen"
                android:textSize="@dimen/splash_screen_logo_size" />
        </android.support.v7.widget.CardView>
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/splash_screen_internet_pb"
        android:layout_width="@dimen/progress_bar_dimen"
        android:layout_height="@dimen/progress_bar_dimen"
        android:layout_gravity="center"
        android:progressBackgroundTint="@color/colorBrightGreen" />

</FrameLayout>